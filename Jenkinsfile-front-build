pipeline{
    agent any

    stages{
        stage('checkout'){
            steps{
                git url:'https://github.com/DarlingOlvera/devOps-front.git',branch:'develop'
            }
        }
        stage('build'){
            steps{
                sh 'npm install'
            }
        }
        stage('testing'){
            steps{
                sh 'run npm test:unit'
            }
        }
        stage('Deploy pipeline 2'){
            steps{
                build 'uadyfon-ui-deploy'
            }
        }
    }
}

